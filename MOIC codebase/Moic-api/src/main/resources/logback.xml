<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
	<property name="LOG_PATH" value="/apps/moic/tomcat/apache-tomcat-9.0.43/moic-logs"/>
	<include resource="org/springframework/boot/logging/logback/base.xml" />

	<appender name="ROLLIN"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/MoicApi.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_PATH}/MoicApi.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
	            <maxFileSize>5MB</maxFileSize>
	        </timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
		</rollingPolicy>

		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="ROLLIN" />
	</root>
	
	<logger name="org.springframework.web" level="INFO" />
	
	<!-- Scheduler logs configuration -->
	
	<appender name="MOICJOBS"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}/MoicApi_Jobs.log</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_PATH}/MoicApi_Jobs.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
	            <maxFileSize>5MB</maxFileSize>
	        </timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
		</rollingPolicy>

		<encoder>
			<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="com.tapestry.moic.jobs.controller" level="INFO">
		<appender-ref ref="MOICJOBS" />
	</logger>
</configuration>
